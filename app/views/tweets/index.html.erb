<%= link_to 'new tweet', new_tweet_path %>

<% @tweets.each do |tweet| %>
  <ul>
    <li><%= tweet.title %></li>
    <li><%= tweet.description %></li>
    <%= link_to 'show', tweet_path %> 
    <%= link_to 'edit', edit_tweet_path %>
    <%= link_to 'exterminate', tweets_path, method: :delete %>
  </ul>
<% end %>

